<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:id="@+id/camera_item"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:background="#E91E63"
                                                   android:padding="5dp"
                                                   android:paddingStart="20dp"
                                                   android:paddingEnd="20dp">

    <TextView
        android:id="@+id/camera_item_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#005E0606"
        android:gravity="center_vertical"
        android:text="123"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/camera_item_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="detail"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/camera_item_id"
        app:layout_constraintTop_toBottomOf="@+id/camera_item_id" />

</androidx.constraintlayout.widget.ConstraintLayout>
